<script>
    (function() {
        var app = angular.module('app', []);

        app.controller('appController', function($scope, $http) {

            $scope.userId = <%= req.session.User.id %>;
            $scope.employee = {};
            $scope.employee.fullname = "";

            $scope.data = {};
            $scope.data.employee = {};

            $scope.data.employee.personal = {};
            $scope.data.employee.personal.id_number = "";
            $scope.data.employee.personal.firstname = "";
            $scope.data.employee.personal.middlename = ""; 
            $scope.data.employee.personal.lastname = ""; 
            $scope.data.employee.personal.qualifier = ""; 
            $scope.data.employee.personal.employee_type_id = "1"; 
            $scope.data.employee.personal.location_id = "7"; 
            $scope.data.employee.personal.shift = "dayTime"; 
            $scope.data.employee.personal.startingDate = ""; 

            $scope.data.employee.account = {};
            $scope.data.employee.account.username = "";
            $scope.data.employee.account.password = "";
            $scope.data.employee.account.confirmPassword = ""; 
            $scope.data.employee.account.account_type_id = "3"; 

            $scope.data.employee.schedule = {};
            $scope.data.employee.schedule.monday = false; 
            $scope.data.employee.schedule.tuesday = false; 
            $scope.data.employee.schedule.wednesday = false; 
            $scope.data.employee.schedule.thursday = false; 
            $scope.data.employee.schedule.friday = false; 
            $scope.data.employee.schedule.saturday = false; 
            $scope.data.employee.schedule.sunday = false; 

            $scope.changePassword = {};
            $scope.changePassword.oldPassword = "";
            $scope.changePassword.newPassword = "";
            $scope.changePassword.confirmPassword = "";

            $http.get('/employee/' + $scope.userId).then(function success(response) {
                $scope.employee = response.data;
                $scope.employee.fullname = response.data.lastname + ', ' +response.data.firstname + ' ' + response.data.middlename;
                console.log(response);
            }, function error(response) {
                console.log(response);
            });


            $scope.empListUsername = [];
            $scope.empListIdNumber = [];

            $scope.allaccount = function() {
                $scope.empListUsername = [];
                $scope.empListIdNumber = [];
                $http.get('/allaccount').then(function success(response) {

                    _.each(response.data, function(value, index) {
                        $scope.empListUsername.push(value.username);
                        $scope.empListIdNumber.push(value.employee[0].id_number);
                    });
                    console.log($scope.empListUsername);
                    console.log($scope.empListIdNumber);
                }, function error(response) {
                    console.log(response);
                });                 
            };

            $scope.allaccount();

            $scope.changePasswordSubmit = function () {

                var data = {data: $scope.changePassword};

                $http.post('/user/changepassword/' + $scope.userId, data).then(function success(response) {
                    alert('Success');
                    console.log(response);
                }, function error(response) {
                    console.log(response);
                });
            };
            
            $scope.logout = function () {

                $http.post('/logout').then(function success(response) {
                    window.location.href = '/';
                }, function error(response) {
                    console.log(response);
                });
            };

            $scope.submit = function () {

                $scope.errors = [];

                if($scope.data.employee.personal.id_number == "") {
                    $scope.errors.push('ID number is required.');
                }

                if($scope.data.employee.personal.startingDate == "") {
                    $scope.errors.push('Starting Date is required.');
                }

                console.log(moment($scope.data.employee.personal.startingDate).format());
                console.log(moment(new Date()).format());
                if(moment($scope.data.employee.personal.startingDate).format() < moment(new Date()).format()) {
                    $scope.errors.push('Starting Date should not be start today.');
                }

                if($scope.data.employee.personal.firstname == "") {
                    $scope.errors.push('Firstname is required.');
                }

                if($scope.data.employee.personal.lastname == "") {
                    $scope.errors.push('Lastname is required.');
                }

                if($scope.data.employee.account.username == "") {
                    $scope.errors.push('Username is required.');
                }

                if($scope.data.employee.account.password == "") {
                    $scope.errors.push('Password is required.');
                }

                if($scope.empListUsername.indexOf($scope.data.employee.account.username) != -1) {
                    //alert('Username already exist.');
                    $scope.errors.push('Username already exist.');
                } 

                if($scope.empListIdNumber.indexOf($scope.data.employee.personal.id_number) != -1) {
                    //alert('Id number already exist.');
                    $scope.errors.push('ID number already exist.');
                }

                if($scope.data.employee.account.password != $scope.data.employee.account.confirmPassword) {
                    $scope.errors.push('Password and confirm password does not match.');
                }


                if($scope.data.employee.account.account_type_id == "1"  || $scope.data.employee.account.account_type_id == "2" || $scope.data.employee.account.account_type_id == "3") {

                    var count = 0;

                    _.each($scope.data.employee.schedule, function(value, index) {
                        if(value) {
                            count++;
                        }
                    });

                    if(count == 0) {
                        $scope.errors.push('Please select a working day.');
                    }
                }

                if($scope.errors.length != 0) {
                    $('#errList').show();
                } else {
                    $('#errList').hide();
                    $("#btnSave").prop("disabled", true);
                    var data = $scope.data.employee;
                    $http.post('/employee', {data: data}).then(function success(response) {
                        alert('Success creating account.');
                        $("#btnSave").prop("disabled", false);
                        $scope.allaccount();
                        console.log(response);
                    }, function error(response) {
                        alert('An error has occured.');
                        console.log(response);
                    }); 
                }
                
            };

            $scope.changeAccount = function() {
                if($scope.data.employee.account.account_type_id == 4 || $scope.data.employee.account.account_type_id == 5) {
                    $('#positionDiv').hide();
                    $('#shiftDiv').hide();
                    $('#locationDiv').hide();
                    $('#scheduleDiv').hide();
                } else {
                    $('#positionDiv').show();
                    $('#shiftDiv').show();
                    $('#locationDiv').show();
                    $('#scheduleDiv').show();
                }
            };

            $scope.clockIn = function () {

                //
                $http.post('/employee/clockin/' + $scope.empIdNumber).then(function success(response) {
                    //alert('log In: ' + $scope.empIdNumber);
                    console.log(response);
                }, function error(response) {
                    alert(response.data.message);
                    console.log(response);
                });
            };

            $scope.clockOut = function () {

                
                $http.post('/employee/clockout/' + $scope.empIdNumber).then(function success(response) {
                   // alert('log Out: ' + $scope.empIdNumber);
                    console.log(response);
                }, function error(response) {
                    console.log(response);
                });
            };

            io.socket.on('timeIn', function onServerSentEvent (msg) {
              //alert('someone time in', msg);
              console.log(msg);
              if(msg.status == 404) {
                alert(msg.employee_id + ' is still logged in.');
              } else {
                $scope.empIdNumber = "";
                alert(msg.employee_id + ' has logged in.');
                $http.get('/employeedaylogs?location_id=' + $scope.logLocation).then(function success(response) {
                    $scope.dayLog = response.data;
                    $('#dataTable1').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable1').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500);
                        console.log(response);
                    }, function error(response) {
                        console.log(response);
                    });

                    $http.get('/employeeswinglogs?location_id=' + $scope.logLocation).then(function success(response) {
                        $scope.swingLog = response.data;
                        $('#dataTable2').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable2').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500); 
                        console.log(response);
                    }, function error(response) {
                        console.log(response);
                    });

                    $http.get('/employeegravelogs?location_id=' + $scope.logLocation).then(function success(response) {
                        $scope.graveLog = response.data;
                        $('#dataTable3').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable3').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500);
                        console.log(response);
                    }, function error(response) {
                        console.log(response);
                    });
              };
            });

            io.socket.on('timeOut', function onServerSentEvent (msg) {
              //alert('someone time in', msg);
              console.log(msg);
              if(msg.status == 404) {
                alert(msg.employee_id + ' is not logged in.');
              } else {
                $scope.empIdNumber = "";
                alert(msg.employee_id + ' has logged out.');
                $http.get('/employeedaylogs?location_id=' + $scope.logLocation).then(function success(response) {
                    $scope.dayLog = response.data;
                    $('#dataTable1').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable1').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500);
                    console.log(response);
                }, function error(response) {
                    console.log(response);
                });

                $http.get('/employeeswinglogs?location_id=' + $scope.logLocation).then(function success(response) {
                    $scope.swingLog = response.data;
                    $('#dataTable2').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable2').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500);
                    console.log(response);
                }, function error(response) {
                    console.log(response);
                });

                $http.get('/employeegravelogs?location_id=' + $scope.logLocation).then(function success(response) {
                    $scope.graveLog = response.data;
                    $('#dataTable3').DataTable({
                            destroy: true,
                            responsive: true
                        }).destroy();
                    setTimeout(function(){
                        $('#dataTable3').DataTable({
                            destroy: true,
                            responsive: true
                        });
                    }, 500);
                    console.log(response);
                }, function error(response) {
                    console.log(response);
                });
              };
            });

            io.socket.on('absentReport', function (msg) {
                console.log('Absent report: ' + JSON.stringify(msg));
                if(!msg) {
                    
                } else {
                    if(msg.employee_ids.length != 0) {
                        _.each(msg.employee_ids, function(value, index) {
                            $('#absentReportDiv').show();
                            $('#absentReportList').append('<li>' + value.employee_id.lastname + ', ' + value.employee_id.firstname + ' ' + value.employee_id.middlename + '</li>');
                        });
                    }
                    
                }
                
            });


            
        });
    })();
</script>
