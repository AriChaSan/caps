<script>
    (function() {
        var app = angular.module('app', []);

        app.controller('appController', function($scope, $http) {

            $scope.userId = <%= req.session.User.id %>;
            $scope.employee = {};
            $scope.employee.fullname = "";

            $scope.changePassword = {};
            $scope.changePassword.oldPassword = "";
            $scope.changePassword.newPassword = "";
            $scope.changePassword.confirmPassword = "";

            $scope.employeeRecord = [];

            $scope.ctx ="";
            $scope.myChart ="";

            $http.get('/employee/' + $scope.userId).then(function success(response) {
                $scope.employee = response.data;
                $scope.employee.fullname = response.data.lastname + ', ' +response.data.firstname + ' ' + response.data.middlename;
                console.log(response);
            }, function error(response) {
                console.log(response);
            });

             $scope.renderChart = function(userData, present, late, absent) {

                if($scope.myChart != "") {
                  $scope.myChart.destroy();
                };
                $scope.ctx = document.getElementById("myChart");
                $scope.myChart = new Chart($scope.ctx, {
                    type: 'bar',
                    data: {
                        labels: userData,
                        datasets: [
                        {
                            label: 'Present',
                            data: present,
                            backgroundColor: 'rgba(118, 252, 114, 0.2)',
                            borderColor: 'rgba(118, 252, 114, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Late',
                            data: late,
                            backgroundColor: 'rgba(255, 185, 79, 0.2)',
                            borderColor: 'rgba(255, 185, 79, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Absent',
                            data: absent,
                            backgroundColor: 'rgba(255, 0, 0, 0.2)',
                            borderColor: 'rgba(255, 0, 0, 1)',
                            borderWidth: 1
                        }
                        
                        ]
                    },
                    options: {
                        scales: {
                            xAxes: [{
                                ticks: {
                                  responsive: false,
                                    beginAtZero:true,
                                    autoSkip: false
                                }
                            }]
                        }

                    }
                });
            };
            
            $scope.date_from = "";
            $scope.date_to = "";
            $scope.logLocation = "7";
            $scope.refreshLog = function() {
                $http.get('/employeeallrecord?location_id=' + $scope.logLocation  + '&date_from='  + $scope.date_from + '&date_to='+ $scope.date_to).then(function success(response) {
                  $scope.employeeRecord = response.data;


                  var newEmployeeRecord = _.map($scope.employeeRecord, function(value, index) {

                    var newEmployeeAttendance = [];

                      _.each(value.employee_attendance, function(value1, index) {

                        var date= new Date(value1.date);
                        if(date >= new Date($scope.date_from) && date <= new Date($scope.date_to)) {
                          newEmployeeAttendance.push(value1)
                        }
                      });

                      value.employee_attendance = newEmployeeAttendance;
                      return value;
                    });

                  $scope.employeeRecord = newEmployeeRecord;
                  $scope.allname = [];
                  $scope.allPresentData = [];
                  $scope.allLateData = [];
                  $scope.allAbsentData = [];

                  _.each($scope.employeeRecord, function(value, index) {
                    var present = _.where(value.employee_attendance, {attendance_status: 'present'});
                    var dayoff = _.where(value.employee_attendance, {attendance_status: 'dayoff'});
                    present = present.length + dayoff.length;
                    var late = _.where(value.employee_attendance, {attendance_status: 'late'});
                    var absent = _.where(value.employee_attendance, {attendance_status: 'absent'});


                    $scope.allname.push(value.fullname1);
                    $scope.allPresentData.push(present);
                    $scope.allLateData.push(late.length);
                    $scope.allAbsentData.push(absent.length);
                  });
                  
                  $scope.renderChart($scope.allname,$scope.allPresentData,$scope.allLateData,$scope.allAbsentData);
                  console.log($scope.employeeRecord );
              }, function error(response) {
                  console.log(response);
              });
            };

